<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.FragmentRecordingControls"
    android:id="@+id/fragmentRecordingControls"
    android:background="@color/colorRecControlBackground"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayoutRecording"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/textColorRecControlPrimary"
            android:id="@+id/tvRecording"
            android:freezesText="true"
            android:textStyle="bold"
            android:text="@string/startRecord"
            android:gravity="center_horizontal"/>

    </TableLayout>

</LinearLayout>
